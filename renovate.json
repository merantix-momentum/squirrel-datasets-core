{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabledManagers": ["pip-compile"],
  "pip-compile": {
    "fileMatch": ["(^|/)requirements\\.in$"]
  },
  "extends": [
    "config:base"
  ],
  "constraints": {
    "python": "==3.9"
  },
  "groupName": "all dependencies",
  "groupSlug": "all",
  "lockFileMaintenance": {
    "enabled": false
  },
  "packageRules": [
    {
      "groupName": "all dependencies",
      "groupSlug": "all",
      "matchPackagePatterns": [
        "*"
      ]
    }
  ],
  "separateMajorMinor": false
}
